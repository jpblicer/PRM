<ul id="todos" class="list-group" style="list-style-type: none">
  <% todos.order(:end_date).each do |todo| %>
    <li class="bg-white rounded-3 my-1 py-2 px-3">
      <div class="event-name-address">
      <div class="btn-group d-flex justify-content-between">
        <div><p class='fs-2 fw-bold'><%= todo.name %></p>
        <%= simple_form_for(todo, html: {"data-controller": "todo"}) do |f| %>
          <%=
            f.input :status,
            label: false,
            as: :select,
            input_html: {"data-action": "change->todo#submit", class: 'fs-5'},
            collection: {"Not Started": :not_started, "In Progress": :in_progress, "Done": :done, "Archived": :archived}
          %>
        <% end %></div>
      <div class="event-date">
        <h5><%= todo.end_date %></h5>
        <h5><%= todo.end_date %></h5></p></div>
      </div>
      </div>
    </li>
    <% end %>
  </ul>
