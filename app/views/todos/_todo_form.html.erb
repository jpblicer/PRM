<%= simple_form_for todo, html: {class: "bg-white mt-3", data: { reset_form_target: 'form', action: "turbo:submit-end->reset-form#reset" } } do |f| %>
  <%= f.hidden_field :todoable_id, value: params["id"] %>
  <%= f.hidden_field :todoable_type, value: params["controller"].singularize.capitalize %>
  <%= f.input :name, label: 'To do Title', input_html: { class: "form-control form-control-lg fs-3 mt-3 mb-5" }, label_html: { class: "fs-3" } %>
  <%= f.input :end_date, label: 'Due Date', as: :date, html5: true, input_html: {min: Date.today + 1}, input_html: { class: "form-control form-control-lg fs-3 mb-3" }, label_html: { class: "fs-3" } %>
  <%= f.submit 'Submit', class: 'btn btn-primary mt-2 btn-lg rounded-4 fs-4' %>
<% end %>
