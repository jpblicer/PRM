<div class="upcoming-container">
  <div class="btn-group p-2 d-flex justify-content-center gap-3 my-3" role="group">
    <%= link_to "Pending", todos_path(filter: 'pending'), class:"btn btn-outline-dark btn-lg rounded-3 todo-status-button-pending w-100 #{ @filter == 'pending' ? 'todo-status-button-pending-active' : ''}" %>
    <%= link_to "Overdue", todos_path(filter: 'overdue'), class:"btn btn-outline-info btn-lg rounded-3 todo-status-button-overdue w-100 #{ @filter == 'overdue' ? 'todo-status-button-overdue-active' : ''}" %>
    <%= link_to "Done", todos_path(filter: 'completed'), class:"btn btn-outline-success btn-lg rounded-3 todo-status-button-completed w-100 #{ @filter == 'completed' ? 'todo-status-button-completed-active' : ''}" %>
    <%= link_to "All", todos_path(filter: 'all_todos'), class:"btn btn-outline-dark btn-lg rounded-3 todo-status-button-all w-100 #{ @filter == 'all_todos' ? 'todo-status-button-all-active' : ''}" %>
  </div>

  <div class="upcoming-list-container rounded-4 shadow " style="max-height: 70vh; overflow: auto;">
    <ul class="list-group bg-white rounded-4 p-4">
      <% @todos.each do |todo| %>
          <%= render 'todos/todo_upcoming', todo: todo %>
      <% end %>

    </ul>
  </div>
</div>
