<% if Event.all.count < 1 && Todo.all.count < 1 %>
  <%= render 'shared/no_data' %>
<% else %>


<div class="container mt-4">

  <div class="dashboard-counter-container d-flex justify-content-evenly">
    <div class="todo-count-card card text-center p-4 rounded-4">
      <%= image_tag asset_path('dashboard_todo_splash.png'), alt: 'Event-Splash', width: 100 %>
      <h2 class="pt-2"><%= Event.all.count %></h2>
      <h3>Events</h3>
    </div>
    <div class="event-count-card card card text-center p-4 rounded-4">
      <%= image_tag asset_path('dashboard_event_splash.png'), alt: 'Todo-Splash', width: 100, height:75 %>
      <h2 class="pt-2"><%= Todo.all.count %></h2>
      <h3>ToDos</h3>
    </div>
  </div>

  <div class="upcoming-container">
    <h2 class="text-center py-4">Upcoming</h2>
    <div class="upcoming-list-container">
      <ul class="list-group">
        <% @sorted_records.each do |record| %>
          <li class="list-item card py-2 my-2 rounded-4">
            <div class="d-flex justify-content-between align-items-center">
              <div class="card-left ps-4 d-flex">
                <% if record.instance_of?(Event) %>
                  <i style="font-size: 2rem; color: blue;" class="card d-flex align-items-center justify-content-center fa-solid fa-calendar-day px-4 me-2 bg-light rounded-4"></i>
                <% else %>
                  <i style="font-size: 2rem; color: green" class="card d-flex align-items-center justify-content-center fa-solid fa-solid fa-clipboard-list px-4 me-2 bg-light rounded-4"></i>
                <% end %>
                <div class="card-left-content">
                  <h4><strong><%= record.name %></strong></h4>
                  <h5><%= record.class %></h5>
                </div>
              </div>
              <div class="card-left pe-4">
                <h4 class="border p-2 rounded-pill bg-light"><%= record.end_date %></h4>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>


</div>





<% end %>
