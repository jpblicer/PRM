<div class="container">
  <h2 class="py-2"><strong>Recently Contacted</strong></h2>
  <div class="recent-contacts-container d-flex justify-content-around py-4">
    <% @recent_contacts.each do |contact| %>
      <%= link_to contact_path(contact) do %>
        <div class="recent-contact d-flex flex-column align-items-center">
          <% if contact.avatar.attached? %>
            <%= cl_image_tag(contact.avatar.key, alt: "contact-avatar", class: "avatar rounded-circle border border-1 shadow mb-2", style:"width: 8rem; height: 8rem; object-fit: cover;", transformation: {gravity: "faces" }) %>
          <% else %>
            <%= image_tag("contact-default-avatar.png" , alt: "contact-avatar", class: "avatar rounded-circle border border-1 shadow mb-2", style:"width: 8rem; height: 8rem") %>
          <% end %>
          <div class="recent-contact-name-container pt-2 mb-2 mt-1">
            <h4 class="text-center"><%= contact.first_name %></h4>
            <h4 class="text-center"><%= contact.last_name %></h4>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
