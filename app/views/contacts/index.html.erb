<% @contacts.each do |contact| %>
  <div class="contact-card bg-white rounded-3 shadow-sm my-2 py-2 px-2">
    <%= link_to contact_path(contact), class: "" do %>
      <div class="contact-link-card bg-white">
        <div>
          <% if contact.avatar.attached? %>
            <%= cl_image_tag(contact.avatar.key, transformation: { width: 640, height: 640, crop: "fill", gravity: "faces" }, alt:"contact-avatar", class: "avatar-small") %>
          <% else %>
            <%= image_tag("contact-default-avatar.png" , alt:"contact-avatar", class: "avatar-small border") %>
          <% end %>
        </div>
        <div class="contact-details">
          <h3><%= contact.first_name %> <%= contact.last_name %></h3>
          <p><%= contact.company.name if contact.company %></p>
        </div>
      </div>
    <% end %>
    <%= render 'contacts/contacts_index_icons', contact: contact %>
  </div>
<% end %>
