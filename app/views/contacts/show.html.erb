<div>
  <h1>Contacts#show</h1>
  <h1>Contact Details</h1>
  <div>
    <div>
      <h2><%= @contact.first_name %> <%= @contact.last_name %></h2>
      <p><%= @contact.job_title %></p>
    </div>
    <div>
      <a href="<% @contact.linkedin %>" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
      <a href="mailto:<% @contact.email %>"><i class="fa-regular fa-envelope"></i></a>
      <a href="tel:<% @contact.phone %>"><i class="fa-solid fa-phone"></i></a>
    </div>
  </div>

  <div>
    <p>Details</p>
    <div>
      <i class="fa-regular fa-building"></i> <%= @contact.company.name %>
    </div>
    <div>
      <i class="fa-solid fa-location-pin"></i> <%= @contact.country %>, <%= @contact.address %>
    </div>
    <div>
      <i class="fa-solid fa-cake-candles"></i> <%= @contact.birthday %>
    </div>
  </div>
  <div data-controller="reset-form">
    <h3>To Do's</h3>
    <p>
      <a class="btn btn-primary" data-reset-form-target="btn" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        <i class="fa-solid fa-plus" data-navigation-target="icon"></i>
      </a>
    </p>
    <div class="collapse" id="collapseExample">
      <div class="card card-body">
        <%= render 'todos/todo_form' %>
      </div>
    </div>
    <%= turbo_frame_tag :todos_list do %>
      <%= render 'todos/todos', contact: @contact %>
    <% end %>
  </div>
  <div>
    <h3>Notes</h3>
    <a href="#" class="add-btn" data-action="click->navigation#toggleMenu">
      <i class="fa-solid fa-plus" data-navigation-target="icon"></i>
    </a>
    <a href="#" class="add-btn" data-action="click->navigation#toggleMenu">
      <i class="fa-regular fa-trash-can"></i>
    </a>
    <%= turbo_frame_tag :notes_list do %>
    <%= render 'notes/notes' %>
    <% end %>
  </div>
</div>
