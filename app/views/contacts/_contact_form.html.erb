<%= simple_form_for(@contact) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.association :company, input_html: {multiple: false, data: {controller: "tom-select"}} %>
  <%= f.input :job_title %>
  <%= f.input :phone %>
  <%= f.input :address %>
  <%= f.input :birthday, as: :date, html5: true %>
  <%= f.input :linkedin %>
  <%= f.input :email %>
  <%= f.input :country, as: :string%>
  <%= f.input :avatar, as: :file %>
  <%= f.submit 'Submit', class: 'btn btn-primary mt-2' %>
<% end %>
