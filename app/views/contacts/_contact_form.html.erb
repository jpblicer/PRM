<%= simple_form_for(@contact, html: { id: "contact-form", class: "custom-form-class", data: { controller: "contact-form" } }) do |f| %>
  <div class="form-container bg-white p-4">
    <h3 class="fs-1 mb-5 fw-bold">Personal Info</h3>

    <% unless @contact.persisted? || @contact.business_card.attached? %>
      <div class="mb-5">
        <%= f.input :business_card, as: :file, label: 'Parse (Business Card / Linked In)',label_html: { class: 'fs-3 mb-3 fw-bold'}, input_html: { class: 'form-control fs-4 pb-3', id: 'contact_business_card', data: { action: "change->contact-form#change", contact_form_target: "businessCard" } } %>

        <%= f.submit 'Extract Data', class: 'btn btn-primary mt-2 btn-lg rounded-4 extract', id: 'extract-data-btn', style: 'display: none;', data: { contact_form_target: "extractButton" } %>
      </div>
    <% end %>

      <div class="mb-5">
        <%= f.label :first_name, class: 'fs-3' %>
        <%= f.input_field :first_name, label: false, class: "form-control form-control-lg fs-3", id: "floatingInput" %>
      </div>

      <div class="mb-5">
        <%= f.label :last_name, class: 'fs-3' %>
        <%= f.input_field :last_name, label: false, class: "form-control form-control-lg fs-3", id: "floatingInput" %>
      </div>


    <%= f.association :company, input_html: {multiple: false, id: "companies-select", data: {controller: "tom-select"}, class: "fs-3"}, label_html: { class: "fs-3" }, class: "form-control form-control-lg fs-3" %>

    <div class="mb-5">
      <%= f.label :job_title, class: 'fs-3' %>
      <%= f.input_field :job_title, label: false, class: "form-control form-control-lg fs-3", id: "floatingInpEngineer" %>
    </div>

    <div class="mb-5">
      <%= f.label :email, class: 'fs-3' %>
      <%= f.input_field :email, label: false, class: "form-control form-control-lg fs-3", id: "floatingInput" %>
    </div>

     <div class="mb-5">
        <%= f.label :phone, class: 'fs-3' %>
        <%= f.input_field :phone, label: false, class: "form-control form-control-lg fs-3", id: "floatingInput" %>
      </div>

  </div>

  <div class="form-container bg-white">
    <div class="d-flex justify-content-between align-items-center mt-3">
      <h3 class="fs-1 pb-3">Additional Info</h3>
      <p>
        <a class="btn btn-primary  rounded-4" data-reset-form-target="btn" data-bs-toggle="collapse" href="#collapseContactDetails" role="button" aria-expanded="false" aria-controls="collapseExample">
          <i class="fa-solid fa-chevron-down" data-navigation-target="icon"></i>
        </a>
      </p>
    </div>
    <div class="collapse" id="collapseContactDetails">
      <div class="mb-5">
        <%= f.label :linkedin, class: 'fs-3' %>
        <%= f.input_field :linkedin, label: false, class: "form-control form-control-lg fs-3", id: "floatingInput" %>
      </div>

      <div class="mb-5">
        <%= f.label :address, class: 'fs-3' %>
        <%= f.input_field :address, label: false, class: "form-control form-control-lg fs-3", id: "floatingInput" %>
      </div>

      <div class="mb-5">
        <%= f.label :country, class: 'fs-3' %>
        <%= f.input_field :country, as: :string, label: false, class: "form-control form-control-lg fs-3", id: "floatingInput" %>
      </div>

      <div class="mb-3">
        <%= f.input :avatar, as: :file, input_html: { class: "form-control form-control-lg fs-6 pb-3 fs-3" }, label_html: { class: "fs-3" } %>
      </div>

      <%= f.input :birthday, as: :date, html5: true, input_html: { class: "form-control form-control-lg fs-6 pb-3 fs-3" }, label_html: { class: "fs-3" } %>


      <%= f.submit 'Submit', class: 'btn btn-primary mt-2 btn-lg rounded-4 fs-4' %>
      <% end %>

    </div>
  </div>
