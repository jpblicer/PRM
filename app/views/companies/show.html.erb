<div class="container">
  <h1>Company#show</h1>
  <h1><%= @company.name %></h1>
  <div>

    <div>
    <% if @company.avatar.key.nil? %>
        <%= image_tag("company-default-avatar.jpeg", alt:"company-avatar", class: "avatar-large") %>
      <% else %>
        <%= cl_image_tag(@company.avatar.key, transformation: { width: 640, height: 640, crop: "fill" }, alt:"company-avatar", class: "avatar-large") %>
    <% end %>
    </div>

    <div>
      <% if @company.linkedin != "" %>
        <a href="<% @company.linkedin %>" target="_blank"><i class="fa-brands fa-linkedin-in link-dark"></i></a>
      <% end %>
      <% if @company.website != "" %>
        <a href="mailto:<% @company.website %>"><i class="fa-brands fa-chrome link-dark"></i></a>
      <% end %>
      <% if @company.phone != "" %>
        <a href="tel:<% @company.phone %>"><i class="fa-solid fa-phone link-dark"></i></a>
      <% end %>
    </div>
  </div>

  <div>
    <h4>Details</h4>
    <div>
      <i class="fa-solid fa-location-pin"></i> <%= @company.address if @company.address %>
    </div>
  </div>

  <div>
    <h3>To Do's</h3>
  </div>

  <div>
    <h3>Notes</h3>
  </div>

</div>
