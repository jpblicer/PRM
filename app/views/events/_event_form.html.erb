  <%= simple_form_for event, html: { data: { reset_form_target: 'form', action: "turbo:submit-end->reset-form#reset" } } do |f| %>
<div class="form-container bg-white">
    <%= f.input :name, input_html: { class: "form-control form-control-lg fs-3 mb-5" }, label_html: { class: "fs-3" } %>

    <%= f.association :company, input_html: { data: { controller: "tom-select", tom_select_options_value: { tags: true } } }, label_html: { class: "fs-3" } %>

    <%= f.association :contacts, collection: @contact_names_collection, input_html: { multiple: true, data: { controller: "tom-select", tom_select_options_value: { tags: true } } }, label_html: { class: "fs-3" } %>

    <%= f.input :address, input_html: { class: "form-control-lg fs-3 mb-5" }, label_html: { class: "fs-3" } %>

    <%= f.input :start_date, input_html: { class: "form-control-lg fs-3 mb-5" }, label_html: { class: "fs-3" }, label: 'Start Date', as: :date, html5: true, input_html: { min: Date.today + 1 } %>

    <%= f.input :end_date, input_html: { class: "form-control-lg fs-3 mb-5" }, label_html: { class: "fs-3" }, label: 'End Date', as: :date, html5: true, input_html: { min: Date.today + 1 } %>

    <%= f.submit 'Submit', class: 'btn btn-primary mt-2 btn-lg rounded-4 fs-4' %>
</div>
  <% end %>
