<ul id="events" class="list-group" style="list-style-type: none">
  <% @events.order(:start_date).each do |event| %>
    <li class="bg-white rounded-3 shadow-sm my-2 py-2 px-3">
      <div class="d-flex justify-content-between align-items-center mt-3">
        <p><strong><%= event.name %></strong></p>
        <p>Start: <%= event.start_date.strftime("%d %b %Y") %></p>
      </div>
      <div class="d-flex justify-content-end align-items-center mt-3">
        <p><%= event.address %></p>
        <p>End: <%= event.end_date.strftime("%d %b %Y") %></p>
      </div>
    </li>
  <% end %>
</ul>
